@model IEnumerable<ItTutorial.Models.Categorias>

@{
    ViewData["Title"] = "Forum";
}

<h2>Forum</h2>

@foreach (var cat in Model)

{
    <div class="forum">
        <div style="background:darkgray;margin:20px;color:white;">
            @Html.DisplayFor(modelItem => cat.CategoryTitle)
            @foreach (var subcat in cat.Subcategorias)
            {
                <div style="background:lightgray;margin:5px;color:white;">
                    @Html.ActionLink(subcat.Title, "Subcategoria", "Forum", new { nomeSub = subcat.Title })
                </div>
            }
        </div>
    </div>
}

<button type="button" style="background-color: greenyellow  ;margin-left:auto;margin-right:auto;display:block;
		font-size : 20px;">
    Continue to practice on the @Html.ActionLink("Console", "Console", "Home")!
</button>

<button type="button" style="background-color: greenyellow  ;margin-left:auto;margin-right:auto;display:block;
		font-size : 20px;">
    Or if you fell you have improved take another shot in the @Html.ActionLink("Quiz", "Index", "QuizPerguntas")!
</button> 


